<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <TextView
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:id="@+id/add_detail_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Add/Change Details"/>

    <LinearLayout
        android:id="@+id/above_input_field"
        android:layout_margin="20dp"
        android:layout_below="@id/add_detail_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Your Name" />

        <EditText
            android:ems="30"
            android:id="@+id/ad_et_name"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/below_input_field_1"
        android:layout_below="@id/above_input_field"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Contact Number" />

        <EditText
            android:ems="100"
            android:id="@+id/ad_et_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/below_input_field"
        android:layout_below="@id/below_input_field_1"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Status" />

        <EditText
            android:ems="100"
            android:id="@+id/ad_et_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/below_input_field"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your all time user_id" />

        <EditText
            android:ems="100"
            android:inputType="number"
            android:id="@+id/ad_et_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>